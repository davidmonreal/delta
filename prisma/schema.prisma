// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

enum UserRole {
  SUPERADMIN
  ADMIN
  USER
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  role         UserRole @default(USER)
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Client {
  id             Int           @id @default(autoincrement())
  nameRaw        String
  nameNormalized String        @unique
  lines          InvoiceLine[]
}

model Service {
  id                Int           @id @default(autoincrement())
  conceptRaw        String
  conceptNormalized String        @unique
  lines             InvoiceLine[]
}

model InvoiceLine {
  id         Int      @id @default(autoincrement())
  date       DateTime
  year       Int
  month      Int
  units      Float
  price      Float
  total      Float
  manager    String
  sourceFile String
  series     String?
  albaran    String?
  numero     String?

  client    Client  @relation(fields: [clientId], references: [id])
  clientId  Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int

  @@index([year, month])
  @@index([clientId, serviceId])
}
