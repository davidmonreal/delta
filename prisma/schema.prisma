// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

enum UserRole {
  SUPERADMIN
  ADMIN
  USER
}

enum CommentKind {
  REPORT_ERROR
  VALIDATE_DIFFERENCE
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  nameNormalized String?
  role         UserRole @default(USER)
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  managedLines InvoiceLine[]
  comparisonComments ComparisonComment[]
}

model Client {
  id             Int           @id @default(autoincrement())
  nameRaw        String
  nameNormalized String        @unique
  lines          InvoiceLine[]
  comparisonComments ComparisonComment[]
}

model Service {
  id                Int           @id @default(autoincrement())
  conceptRaw        String
  conceptNormalized String        @unique
  lines             InvoiceLine[]
  comparisonComments ComparisonComment[]
}

model InvoiceLine {
  id         Int      @id @default(autoincrement())
  date       DateTime
  year       Int
  month      Int
  units      Float
  price      Float
  total      Float
  manager    String
  managerNormalized String?
  sourceFile String
  series     String?
  albaran    String?
  numero     String?
  managerUser   User?   @relation(fields: [managerUserId], references: [id])
  managerUserId Int?

  client    Client  @relation(fields: [clientId], references: [id])
  clientId  Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int

  @@index([year, month])
  @@index([clientId, serviceId])
  @@index([managerUserId])
}

model ComparisonComment {
  id        Int         @id @default(autoincrement())
  kind      CommentKind
  message   String
  year      Int
  month     Int
  createdAt DateTime    @default(now())

  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  client  Client @relation(fields: [clientId], references: [id])
  clientId Int
  service Service @relation(fields: [serviceId], references: [id])
  serviceId Int

  @@index([userId])
  @@index([clientId, serviceId, year, month])
}

model UploadJob {
  id            String   @id @default(uuid())
  fileName      String
  blobUrl       String?
  status        String
  progress      Int      @default(0)
  processedRows Int      @default(0)
  totalRows     Int      @default(0)
  summary       Json?
  errorMessage  String?
  userId        Int?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}
